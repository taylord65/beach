<div id="alligncentertextleft">
<h2>Account</h2>
<br>

<% if user_signed_in? %>
<div class ="logo"> <%= link_to image_tag("user.svg")%> </div> &nbsp
   <%= current_user.email %> &nbsp| &nbsp  
   <%= link_to('LOG OUT', destroy_user_session_path, :method => :delete) %> 

<% end %>
<br>
<br>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, :size => 50 %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<h3> Change Password </h3>
  <div><%= f.label "New Password" %> <br />
    <%= f.password_field :password, autocomplete: "off", :size => 50 %></div>

  <div><%= f.label "Confirm New Password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :size => 50 %></div>

  <div><%= f.label :current_password %> <br />
    <%= f.password_field :current_password, autocomplete: "off", :size => 50 %></div>

  <div><%= f.submit "Update" %></div>
<% end %>
<br>

<p>Not feeling it? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

</div>