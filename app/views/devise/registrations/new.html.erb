<div id="alligncentertextleft">

<h2>Join</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, :size => 50 %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :size => 50 %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :size => 50 %></div>
<br>
  <div><%= f.submit "Join" %></div>
<% end %>

</div>