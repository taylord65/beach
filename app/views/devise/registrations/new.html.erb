<div id="alligncentertextleft">
  <p>You must have an account in order to submit videos to streams, subscribe to streams, and create streams.</p>
  <br>
	<div class="edittitles">	<h1>Join</h1> </div>
	<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, :class => 'search' %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'search' %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'search' %></div>
<br>
  <div><%= f.submit 'Join', :class => 'subscribebutton' %></div>
<% end %>

</div>