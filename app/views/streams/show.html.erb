
<%= render 'watch' %>
<br>
<div class="vidcontrolls">
<table style="width:1067px">
	<tr>
		<td>
			<h1> <%= @stream.title %> </h1>
		</td>
		<td>
			<div id="alligncentertextcenter">
			<img src="http://www.beached.tv/assets/pause-c1c0a3d060f908372ebecf2eb7e7c018.svg" id="play-button" />  &nbsp &nbsp &nbsp<img src="http://www.beached.tv/assets/sound-2850c52028b16dd2c2e264c5dddb39ba.svg" id="mute-button" /> &nbsp &nbsp &nbsp<img src="http://www.beached.tv/assets/resize-enlarge-a44a4204dca596b45aacb25610ee3189.svg" id="enlarge-button" />  
			</div>
		</td>
		<td>
		<div id="textright">				
		<table>
					<td>
						<div id="subscribecount"><b> <%= @stream.subs %></b></div> 
					</td>
					<td>
						<%= pluralize_without_count(@stream.subs, "Subscriber") %> 
					</td>
			</table>
			</div>		
		</td>
	</tr>
	<tr>
		<td>
		  <%= @stream.description %>			
		</td>
		<td>
		</td>
		<td>
			<div id="textright">				
			<% if user_signed_in? %>
			<%= button_to @buttontext, subscribe_stream_path(@stream), :method => :get , :remote=>true, :class => 'subscribebutton'  %>
			<% else %>
			<%= button_to "subscribe", new_user_registration_path, :method => :get, :class => 'subscribebutton' %>
			<% end %>
			</div>
		</td>
	</tr>
</table>
<br>

	<%= render "subscribebar" %>
	
<br>
<br>	
<div id="alligncentertextcenter">
<% if user_signed_in? %>
	<% if current_user.id = @addkey %>
		<%= link_to 'Edit', edit_stream_path(@stream), "data-no-turbolink" => true %> 
		<% else %>
		<%= link_to 'Contribute', edit_stream_path(@stream), "data-no-turbolink" => true %> 
	<% end %>
<% else %>
		<%= link_to('Contribute', new_user_registration_path)  %>
<% end %>
</div>
</div>
