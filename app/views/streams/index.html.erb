<h1>Streams </h1>

<%= form_tag streams_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<table style="width:600px">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streams.each do |stream| %>
      <tr>
        <td><%= stream.title %></td>
        <td><%= stream.description %></td>
	    <td><%= link_to 'Watch', stream, "data-no-turbolink" => true %></td>
        <td><%= link_to 'Edit', edit_stream_path(stream), "data-no-turbolink" => true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stream', new_stream_path %>
<%= link_to 'Back', splash_path %>

