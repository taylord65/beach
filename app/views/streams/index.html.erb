	
	<div id="centerimage">
<br>
			<%= image_tag("beached_onlyletters.svg") %>
			<br>
			<br>
			<div class = "splashfont">
				<h1> Watch and Create live streams that feature Youtube content. </h1>
			</div>
		<br>
		
	<%= form_tag streams_path, method: :get do %>
	  <p>
	    <%= text_field_tag :query, params[:query], :class => 'search' %>
	    <%= submit_tag "Search", :class => 'fieldbutton' %>
	  </p>
	<% end %>
		
	</div>
	
	<div id="alligncentertextcenter">
		<br>
			<%= render "subscribebar" %>

		<br>

	</div>
	
	<div id="alligncentertextleft">

<table>
<tbody>

	<tr>
		<td valign="top">
			<table style="width:400px">
			  <tbody>
			    <% @streams.each do |stream| %>
			    <tr valign="middle">
				<td><%= button_to stream.title, stream, :class => 'subscribebutton', :method => "get", "data-no-turbolink" => true  %></td>
			        <td><%= truncate(stream.description, :length => 100) %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		</td>
	</tr>	
</tbody>
</table>
<br>
</div>


