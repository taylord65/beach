<div id="player"></div>
<script>
var currentvideoplaying;
  var tag = document.createElement('script');
  tag.src = "https://www.youtube.com/iframe_api";
  var firstScriptTag = document.getElementsByTagName('script')[0];
  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
  var player;
  function onYouTubePlayerAPIReady() {
    player = new YT.Player('player', {
      height: '480',
      width: '853',
	playerVars:{
			autoplay: 1,
			controls: 0,
			rel: 0,
			showinfo: 0
		},

     loadPlaylist:{
        listType:'playlist'
     },
		
      events: {
        'onReady': onPlayerReady,
        'onStateChange': onPlayerStateChange
      }
    });
  }
  function onPlayerReady(event) {
	//When you press watch, this playlist will be loaded and you start at the index and seconds past
    event.target.loadPlaylist(gon.videoidcurrent, gon.videoindex , gon.starttime);
  }

  function onPlayerStateChange(event) {
	
	if (event.data == YT.PlayerState.PLAYING) {
        var url = event.target.getVideoUrl();
        // "http://www.youtube.com/watch?v=gzDS-Kfd5XQ&feature=..."
        var match = url.match(/[?&]v=([^&]+)/);
        // ["?v=gzDS-Kfd5XQ", "gzDS-Kfd5XQ"]
        currentvideoplaying = match[1];
		//This is the current playing videoID
    }
	
	
    if (event.data == YT.PlayerState.ENDED) {

	if(currentvideoplaying == gon.videoidcurrent.slice(-1)[0]) {
		player.reload(true); //Reload the page when the last video in the playlist has finished 
		//want to be able to now accept a new playlist
	}
	
	
    }
  }
  function stopVideo() {
    player.stopVideo();
  }

</script>

