        index:parseInt(0)
     },
		
      events: {
        'onReady': onPlayerReady,
        'onStateChange': onPlayerStateChange
      }
    });
  }
  function onPlayerReady(event) {
	//on page load play this video
    event.target.loadPlaylist([gon.videoidcurrent]);
  }

  function onPlayerStateChange(event) {
    if (event.data == YT.PlayerState.ENDED) {
	event.target.loadPlaylist(['rNMhNJDRnhU']);
    }
  }
  function stopVideo() {
    player.stopVideo();
  }
</script>

